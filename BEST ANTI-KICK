local p = game:GetService("Players").LocalPlayer

local AdonisRemotes = {}

local function isAdonisRemoteEvent(remoteEvent)
    if AdonisRemotes[remoteEvent] then
        return true
    end

    local name = remoteEvent.Name
    if #name == 36 and string.match(name, "^%x%x%x%x%x%x%x%x%-%x%x%x%x%-%x%x%x%x%-%x%x%x%x%-%x%x%x%x%x%x%x%x%x%x%x%x$") then
        AdonisRemotes[remoteEvent] = true
        return true
    end

    return false
end

local o
o = hookfunction(Instance.new("RemoteEvent").FireServer, function(s, ...)
    local args = {...}
    
    if isAdonisRemoteEvent(s) then
        return o(s, ...)
    end
    
    for _, v in ipairs(args) do
        if type(v) == "string" and string.find(string.lower(v), "kick") then
            return
        end
    end
    
    return o(s, ...)
end)

local _n
_n = hookmetamethod(game, "__namecall", function(s, ...)
    if s == p and getnamecallmethod():lower() == "kick" then
        return
    end
    return _n(s, ...)
end)

local K
K = hookfunction(p.Kick, function(self, ...)
    if self == p then
        return
    end
    return K(self, ...)
end)

for k, v in pairs(getgc(true)) do
    if pcall(function()
        return rawget(v, "indexInstance")
    end) and type(rawget(v, "indexInstance")) == "table" and (rawget(v, "indexInstance"))[1] == "kick" then
        setreadonly(v, false)
        v.tvk = {
            "kick",
            function()
                return false
            end
        }
    end
end
